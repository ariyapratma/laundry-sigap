<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_laundry_employee_form" model="ir.ui.view">
        <field name="name">laundry.employee.form</field>
        <field name="model">laundry.employee</field>
        <field name="arch" type="xml">
            <form string="Karyawan Laundry">
                <sheet>
                    <group>
                        <field name="name"/>
                        <!-- <field name="position"/> -->
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="user_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_laundry_employee_tree" model="ir.ui.view">
        <field name="name">laundry.employee.tree</field>
        <field name="model">laundry.employee</field>
        <field name="arch" type="xml">
            <tree string="Daftar Karyawan">
                <field name="name"/>
                <!-- <field name="position"/> -->
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <record id="action_laundry_employee" model="ir.actions.act_window">
        <field name="name">Karyawan Laundry</field>
        <field name="res_model">laundry.employee</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_laundry_employee" name="Karyawan" parent="menu_laundry_root" action="action_laundry_employee" sequence="30"/>
</odoo>