<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View untuk Laundry Order Line -->
    <record id="view_laundry_order_line_form" model="ir.ui.view">
        <field name="name">laundry.order.line.form</field>
        <field name="model">laundry.order.line</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="order_id"/>
                    <field name="product_id"/>
                    <field name="quantity"/>
                    <field name="price_unit"/>
                    <field name="price_subtotal"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Tree View (List) -->
    <record id="view_laundry_order_line_tree" model="ir.ui.view">
        <field name="name">laundry.order.line.tree</field>
        <field name="model">laundry.order.line</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="order_id"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="price_unit"/>
                <field name="price_subtotal"/>
            </tree>
        </field>
    </record>
</odoo>