<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_laundry_service_form" model="ir.ui.view">
        <field name="name">laundry.service.form</field>
        <field name="model">laundry.service</field>
        <field name="arch" type="xml">
            <form string="Layanan Laundry">
                <sheet>
                    <group>
                        <field name="name"/>
                        <!-- <field name="price"/> -->
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_laundry_service_tree" model="ir.ui.view">
        <field name="name">laundry.service.tree</field>
        <field name="model">laundry.service</field>
        <field name="arch" type="xml">
            <tree string="Daftar Layanan">
                <field name="name"/>
                <!-- <field name="price"/> -->
            </tree>
        </field>
    </record>

    <record id="action_laundry_service" model="ir.actions.act_window">
        <field name="name">Layanan Laundry</field>
        <field name="res_model">laundry.service</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_laundry_service" name="Layanan" parent="menu_laundry_root" action="action_laundry_service" sequence="20"/>
</odoo>